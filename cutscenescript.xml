		<question id = 'question23'>
			<body>Select the shape with no corners.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Circle</answer1>
		</question>
		
		<question id = 'question24'>
			<body>Select the shape with 3 corners.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Triangle</answer1>
		</question>
		
		<question id = 'question25'>
			<body>Select the shape with 4 corners.</body>
			<numberOfAnswers>4</numberOfAnswers>
			<answer1>Square</answer1>
			<answer2>Rectangle</answer2>
			<answer3>Trapezoid</answer3>
			<answer4>Parallelogram</answer4>
		</question>
		
		<question id = 'question26'>
			<body>Select the shape with 5 corners.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Pentagon</answer1>
		</question>
		
		<question id = 'question27'>
			<body>Select the shape with 6 corners.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Hexagon</answer1>
		</question>
		
		<question id = 'question28'>
			<body>Select the shape with 8 corners.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Octagon</answer1>
		</question>
		
		<question id = 'question29'>
			<body>Select the shape with infinite lines of symmetry.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Circle</answer1>
		</question>
		
		<question id = 'question30'>
			<body>Select the shape with 3 lines of symmetry.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Triangle</answer1>
		</question>
		
		<question id = 'question31'>
			<body>Select the shapes with 6 lines of symmetry.</body>
			<numberOfAnswers>2</numberOfAnswers>
			<answer1>Square</answer1>
			<answer2>Hexagon</answer2>
		</question>
		
		<question id = 'question32'>
			<body>Select the shape with 2 lines of symmetry.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Rectangle</answer1>
		</question>
		
		<question id = 'question33'>
			<body>Select the shape with 1 line of symmetry.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Trapezoid</answer1>
		</question>
		
		<question id = 'question34'>
			<body>Select the shape with no lines of symmetry.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Parallelogram</answer1>
		</question>
		
		<question id = 'question35'>
			<body>Select the shape with 5 lines of symmetry.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Pentagon</answer1>
		</question>
		
		<question id = 'question36'>
			<body>Select the shape with 8 lines of symmetry.</body>
			<numberOfAnswers>1</numberOfAnswers>
			<answer1>Octagon</answer1>
		</question>
	</QuizQuestions>
	
	<LoseScene>
		<dialogue id = 'dialogue1'>Our factory isn’t doing any better.</dialogue>
		<dialogue id = 'dialogue2'>When you’re ready please try again.</dialogue>
	</LoseScene>

	<WinScene>
		<dialogue id = 'dialogue1'>Our factory is now doing much better, thanks to you!</dialogue>
		<dialogue id = 'dialogue2'>We’d be honored if you’d rename the factory.</dialogue>
	</WinScene>
</GameScript>

